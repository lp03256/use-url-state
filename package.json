{
  "name": "use-url-state",
  "version": "0.1.0",
  "description": "Tiny, dependency-free React hook that syncs state with URL query params",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node esbuild.config.js",
    "test": "vitest run",
    "dev": "vitest watch",
    "size": "node -e \"const fs=require('fs');const gzip=require('zlib').gzipSync;const esm=fs.readFileSync('./dist/index.js');const cjs=fs.readFileSync('./dist/index.cjs');console.log('ESM:',esm.length,'bytes,',gzip(esm).length,'gzipped');console.log('CJS:',cjs.length,'bytes,',gzip(cjs).length,'gzipped');\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "hook",
    "url",
    "query",
    "state",
    "sync",
    "router",
    "history"
  ],
  "author": "lp03256",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lp03256/use-url-state.git"
  },
  "bugs": {
    "url": "https://github.com/lp03256/use-url-state/issues"
  },
  "homepage": "https://github.com/lp03256/use-url-state#readme",
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@vitejs/plugin-react": "^4.2.1",
    "esbuild": "^0.19.11",
    "jsdom": "^23.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vitest": "^1.1.3"
  },
  "sideEffects": false
}
